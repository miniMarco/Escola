@model IEnumerable<Modelo.Professor>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>Turmas</th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td style="border:solid; border-color:lightgray">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td style="border:solid;border-color:lightgray">
                @foreach (var turma in item.Turmas)
                {
                   @Html.DisplayFor(modelItem => turma.Descricao) 
                }
            </td>
            <td style="border:solid;border-color:lightgray">
                @Html.ActionLink("Edit", "Edit", new { id=item.ProfessorId }) |
                @Html.ActionLink("Details", "Details", new { id=item.ProfessorId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ProfessorId })
            </td>
        </tr>
    }
    
    </table>

    @Html.ActionLink("Início", "Index", "Home")
</body>
</html>
