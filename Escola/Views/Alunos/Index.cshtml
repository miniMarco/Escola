@model IEnumerable<Modelo.Aluno>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td> 
                @Html.DisplayFor(modelItem => item.Turma.Descricao)
            </td>
            <td>
                @foreach (var disciplina in item.Disciplinas)
                {
                    @Html.DisplayFor(modelItem => disciplina.Descricao) 
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.AlunoId }) |
                @Html.ActionLink("Details", "Details", new { id=item.AlunoId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.AlunoId })
            </td>
        </tr>
    }
    
    </table>
    @Html.ActionLink("Início", "Index", "Home")
</body>
</html>
